#!/bin/bash

source ~/repos/scripts/util/exportColors

commitMessage="[Backup Script]"
if [ $# -eq 1 ]
then
    commitMessage="[Backup Script] $1"
fi

pushd . > /dev/null
echo "${Purple}--------------------------${Reset}"
echo "${Purple}Backing up config files...${Reset}"
echo "${Purple}--------------------------${Reset}"
cd ~/repos/config
git add :/
git --no-pager diff --cached --name-only | awk '{ printf "Backing up: %s\n", $1 }'
echo ""
git commit -m "$commitMessage"
git push origin master


echo ""
echo "${Purple}---------------------${Reset}"
echo "${Purple}Backing up scripts...${Reset}"
echo "${Purple}---------------------${Reset}"
cd ~/repos/scripts
git add :/
git --no-pager diff --cached --name-only | awk '{ printf "Backing up: %s\n", $1 }'
echo ""
git commit -m "$commitMessage"
git push origin master

echo ""
echo "${Green}Backup Complete!${Reset}"
echo ""
popd > /dev/null
